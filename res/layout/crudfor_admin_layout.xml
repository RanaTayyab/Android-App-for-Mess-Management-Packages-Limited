<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tayyab.packagesltdmess.CRUDforAdmin">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo3" />

    <TextView
       android:layout_marginTop="20dp"
        android:textColor="#005eff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Admin Panel"
        android:id="@+id/textView2"

        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/AddbtninCrud"
        android:layout_toEndOf="@+id/AddbtninCrud" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Add Recipes"
        android:id="@+id/AddbtninCrud"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:onClick="AddBtnInCrudPressed"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Delete Recipes"
        android:id="@+id/DeletebtninCrud"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:layout_above="@+id/UpdatebtninCrud"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="DeleteBtnInCrudPressed"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Update Recipes"
        android:id="@+id/UpdatebtninCrud"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:layout_marginTop="33dp"
        android:onClick="UpdateBtnInCrudPressed"
        android:layout_below="@+id/AddbtninCrud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Display Menu"
        android:id="@+id/MenubtninCrud"
        android:layout_alignTop="@+id/UpdatebtninCrud"
        android:layout_alignLeft="@+id/DeletebtninCrud"
        android:layout_alignStart="@+id/DeletebtninCrud"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:onClick="MenuBtnInCrudPressed"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Register as New"
        android:id="@+id/RegisterbtninCrud"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:onClick="RegisterBtnInCrudPressed"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/UpdatebtninCrud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Menu By Day"
        android:id="@+id/MenuByDaybtninCrud"
        android:layout_alignTop="@+id/RegisterbtninCrud"
        android:layout_alignLeft="@+id/MenubtninCrud"
        android:layout_alignStart="@+id/MenubtninCrud"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:onClick="MenuByDayBtnInCrudPressed"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="Change Password"
        android:id="@+id/changepasswordbtn"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:onClick="PasswordChangeBtnInCrudPressed"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/RegisterbtninCrud"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="Display PreMenu"
        android:id="@+id/DisplayPreMenuBtn"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:onClick="DisplayPreMenuInCrudPressed"
        android:layout_alignTop="@+id/changepasswordbtn"
        android:layout_alignRight="@+id/MenuByDaybtninCrud"
        android:layout_alignEnd="@+id/MenuByDaybtninCrud" />

    <Button
        android:onClick="DetailOfPreMenuBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:text="PreMenu Detail"
        android:id="@+id/PreMenuDetailBtnPressed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
