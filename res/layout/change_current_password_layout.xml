<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tayyab.packagesltdmess.ChangeCurrentPassword">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageView10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo3" />

    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#005eff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Change Password"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/imageView10"
        android:layout_alignRight="@+id/editEmployeeno3"
        android:layout_alignEnd="@+id/editEmployeeno3" />

    <EditText
        android:hint="Employee no."
        android:textColorHint="#008080"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editEmployeeno3"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/imageView10"
        android:layout_alignLeft="@+id/editCurrentPassword"
        android:layout_alignStart="@+id/editCurrentPassword" />


    <EditText
        android:inputType="textPassword"
        android:hint="Current Password"
        android:layout_marginTop="30dp"
        android:textColorHint="#008080"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editCurrentPassword"
        android:layout_below="@+id/editEmployeeno3"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textPassword"
        android:hint="New Password"
        android:textColorHint="#008080"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editNewPassword"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editCurrentPassword"
        android:layout_alignLeft="@+id/editCurrentPassword"
        android:layout_alignStart="@+id/editCurrentPassword" />


    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="Change Password"
        android:id="@+id/ChangePasswordbtnInside"
        android:onClick="ChangeThePasswordInside"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/editNewPassword"
        android:layout_toRightOf="@+id/imageView10"
        android:layout_toEndOf="@+id/imageView10" />
</RelativeLayout>
