<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tayyab.packagesltdmess.CrudOfPreMenu">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageView15"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo3" />

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#005eff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pre-Menu Control"
        android:id="@+id/textView11"
        android:layout_alignTop="@+id/imageView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />

    <Button
        android:onClick="AddDelforPreMenuIsPressed"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"

        android:text="Add/Delete Recipe"
        android:id="@+id/AddDelForPreMenuButton"
        android:layout_below="@+id/imageView15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp" />

    <Button
        android:onClick="UpdateforPreMenuIsPressed"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:text="Update Recipe"
        android:id="@+id/UpdateForPreMenuButton"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/AddDelForPreMenuButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
