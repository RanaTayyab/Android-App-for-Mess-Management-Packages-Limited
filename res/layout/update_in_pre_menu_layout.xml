<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tayyab.packagesltdmess.UpdateInPreMenu">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageView16"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/logo3" />

    <TextView
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="#005eff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update PreMenu"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView16"
        android:layout_toEndOf="@+id/imageView16"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

    <EditText
        android:textColorHint="#008080"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Previous Recipe"
        android:id="@+id/PreviousInPreMenuET"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/imageView16"
        android:layout_centerHorizontal="true" />

    <EditText
        android:textColorHint="#008080"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="New Recipe"

        android:id="@+id/NewInPreMenuET"
        android:layout_below="@+id/PreviousInPreMenuET"
        android:layout_alignLeft="@+id/PreviousInPreMenuET"
        android:layout_alignStart="@+id/PreviousInPreMenuET"
        android:layout_marginTop="50dp" />

    <Button
        android:onClick="PreviousNewButtonPreMenu"
        android:layout_marginTop="36dp"
        android:layout_width="120dp"
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/PreviousNewInPreMenuBtn"
        android:layout_below="@+id/NewInPreMenuET"
        android:layout_centerHorizontal="true"
   />
</RelativeLayout>
