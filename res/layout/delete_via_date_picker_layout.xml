<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tayyab.packagesltdmess.DeleteViaDatePicker">

    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/DeleteBtnDatePick"
        android:layout_marginTop="38dp"
        android:text=": :"
        android:layout_below="@+id/imageView12"
        android:layout_toRightOf="@+id/editDeleteRecipeDate"
        android:layout_toEndOf="@+id/editDeleteRecipeDate" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/imageView12"
        android:src="@drawable/logo3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="#005eff"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Delete Recipe"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/imageView12"
        android:layout_alignLeft="@+id/DeleteBtnInDate"
        android:layout_alignStart="@+id/DeleteBtnInDate"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="Pick Day"
        android:textColorHint="#008080"
        android:id="@+id/editDatePickerDayName"
        android:layout_alignTop="@+id/editDeleteRecipeDate"
        android:layout_toLeftOf="@+id/editDeleteRecipeDate"
        android:layout_toStartOf="@+id/editDeleteRecipeDate" />
    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:hint="and Date"
        android:textColorHint="#008080"
        android:id="@+id/editDeleteRecipeDate"
        android:layout_alignTop="@+id/DeleteBtnDatePick"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <Button
        android:textColor="@android:color/white"
        android:background="@drawable/custom_button1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/DeleteBtnInDate"
        android:onClick="DeleteRecipeViaDate"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
